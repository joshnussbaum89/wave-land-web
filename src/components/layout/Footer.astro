---
// import ClientLogos from './ClientLogos.astro'
---

<footer id="footer" class="footer">
  <!-- <ClientLogos /> -->
  <p id="copyright"></p>
</footer>

<style>
  .client-logos {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
  }

  .client-logos .logo {
    width: 8rem;
    height: 4rem;
    padding: 0.5rem;
  }

  .client-logos img {
    width: 100%;
    height: 100%;
  }

  .client-logos .logo:first-of-type {
    width: 5rem;
    height: 3rem;
  }

  .client-logos .logo:last-of-type {
    width: 4.5rem;
    height: 3.5rem;
  }

  .footer p {
    padding-bottom: 2rem;
    font-size: var(--size-extra-small);
    text-align: center;
    color: var(--color-grey-text);
  }
</style>

<script>
  function setFooterCopyrightText() {
    const footerText = `wavelandweb.com Â© ${new Date().getFullYear()}`
    document.querySelector('#copyright')!.innerHTML = footerText
  }
  setFooterCopyrightText()
</script>
