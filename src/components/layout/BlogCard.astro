---
const { url, title, date, image, altText } = Astro.props
---

<div class="card">
  <a href={url}>
    <img src={image} alt={altText} />
  </a>
  <div class="card-info">
    <p>{date}</p>
    <h3><a href={url}>{title}</a></h3>
  </div>
</div>

<style>
  .card {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }

  @media (min-width: 768px) {
    .card {
      flex-direction: column;
      justify-content: flex-start;
    }
  }

  .card a {
    width: 50%;
  }

  .card img {
    width: 100%;
    height: 100%;
    border-radius: 5px;
  }

  .card-info {
    width: 50%;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 0.5rem;
  }

  @media (min-width: 768px) {
    .card a,
    .card-info {
      width: 100%;
      padding: 0.5rem 0;
    }
  }

  .card-info h3 {
    font-size: var(--size-extra-small);
    text-transform: uppercase;
    text-align: left;
  }

  @media (min-width: 768px) {
    .card-info h3 {
      font-size: var(--size-small);
    }
  }

  .card-info p {
    font-size: 0.8rem;
    color: var(--color-grey-text);
  }
</style>
