---
import { Picture } from 'astro:assets'

export interface Props {
  slug: string
  title: string
  published: string
  image: ImageMetadata
  imageAlt: string
}

const { slug, title, published, image, imageAlt } = Astro.props
---

<div class="card">
  <a href={slug}>
    <Picture src={image} formats={['avif', 'webp']} alt={imageAlt} />
  </a>
  <div class="card-info">
    <p>{published}</p>
    <h3><a href={slug}>{title}</a></h3>
  </div>
</div>

<style>
  .card {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }

  @media (min-width: 768px) {
    .card {
      flex-direction: column;
      justify-content: flex-start;
    }
  }

  .card a {
    width: 50%;
  }

  .card img {
    border-radius: 5px;
  }

  .card-info {
    width: 50%;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 0.5rem;
  }

  @media (min-width: 768px) {
    .card a,
    .card-info {
      width: 100%;
      padding: 0.5rem 0;
    }
  }

  .card-info h3 {
    font-size: var(--size-xs);
    text-transform: uppercase;
    text-align: left;
  }

  @media (min-width: 768px) {
    .card-info h3 {
      font-size: var(--size-sm);
    }
  }

  .card-info p {
    font-size: 0.8rem;
    color: var(--color-grey-text);
  }
</style>
