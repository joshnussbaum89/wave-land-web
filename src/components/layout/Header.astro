---
import RotatingCircles from '../animations/RotatingCircles.astro'

export interface Props {
  class?: string
}

const { class: className } = Astro.props
---

<header id="header" class:list={['header site-section', className]} data-scroll-index="0">
  <RotatingCircles />
  <slot />
</header>

<style>
  .header {
    max-width: 50rem;
    min-height: calc(100vh - 14rem);
    margin: 0 auto 8rem;
    z-index: 1;
    position: relative;
    padding: 1rem;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  @media (min-width: 768px) {
    .header {
      padding: 2rem;
      min-height: calc(100vh - 23rem);
    }
  }

  /***

    This is a temporary fix for Safari + Firefox.
    The ViewTransition API only really works in Chrome so, for now we're keeping the header visible.
    The .site-section class is needed for the scrolling animation.

  ***/

  .header.site-section {
    opacity: 1;
  }
</style>
