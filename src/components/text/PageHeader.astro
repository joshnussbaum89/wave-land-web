---
export interface Props {
  text: string
  class?: string
}

const { text, class: className } = Astro.props
---

<h1 class={className}>{text}</h1>

<style>
  h1 {
    margin-bottom: 1rem;
    font-size: var(--size-xl);
    text-align: center;
  }

  @media (min-width: 768px) {
    h1 {
      font-size: var(--size-xxl);
    }
  }
</style>
