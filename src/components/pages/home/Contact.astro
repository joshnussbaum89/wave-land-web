---
import SectionHeader from '../../layout/SectionHeader.astro'
---

<section id="contact" class="contact" data-scroll-index="4">
  <div class="contact-container">
    <SectionHeader text="Contact Us" />
    <p>Have something you are looking to build? Let's make it âœ¨</p>
    <form method="POST" class="form" name="contactForm" action="/success" data-netlify="true">
      <label for="name">Name: <span>*</span></label>
      <input id="name" type="text" name="name" placeholder="Name" required />
      <label for="email">Email: <span>*</span></label>
      <input id="email" type="email" name="email" placeholder="Email" required />
      <label for="message">Message: <span>*</span></label>
      <textarea
        id="message"
        name="message"
        cols="30"
        rows="5"
        placeholder="Write your message"
        required></textarea>
      <button class="josh-cta" type="submit">Send Message</button>
    </form>
  </div>
</section>

<style>
  .contact-container {
    width: 100%;
    max-width: 650px;
    margin: auto;
  }

  .contact-container h2 {
    margin-bottom: 1rem;
  }

  .contact-container > p {
    display: block;
    max-width: 420px;
    margin: 0 auto 2rem;
    font-size: var(--size-small);
    text-align: center;
  }

  @media (min-width: 768px) {
    .contact-container > p {
      max-width: 500px;
      font-size: var(--size-medium);
    }
  }

  .form {
    display: flex;
    flex-direction: column;
    margin-bottom: 7rem;
    font-size: var(--size-small);
  }

  @media (min-width: 768px) {
    .form {
      margin-bottom: 6rem;
    }
  }

  .form label,
  .form input,
  .form textarea {
    font-size: var(--size-small);
  }

  .form label,
  .form input,
  .form textarea {
    border-radius: 5px;
  }

  .form input,
  .form textarea {
    margin-bottom: 1rem;
    padding: 0.5rem;
    border: 2px solid var(--color-black);
    background: var(--color-white);
    transition: var(--transition-normal);
  }

  .form label {
    margin-bottom: 0.25rem;
  }

  .form label span {
    color: var(--color-red);
  }

  .form textarea {
    margin-bottom: 2rem;
  }

  .form button {
    margin: 0 auto;
    padding: 1rem;
    font-size: var(--size-small);
  }

  @media (min-width: 768px) {
    .form button {
      font-size: var(--size-medium);
    }
  }

  .form input:focus,
  .form textarea:focus {
    outline: 0;
    appearance: none;
    -webkit-appearance: none;
    -webkit-box-shadow: 0 0 0 2px var(--color-light-purple);
    box-shadow: 0 0 0 2px var(--color-light-purple);
  }

  .form input::placeholder,
  .form textarea::placeholder {
    color: var(--color-grey-text);
  }
</style>
