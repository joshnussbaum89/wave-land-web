---
export interface Props {
  text: string
  url: string
}

const { text, url } = Astro.props
---

<a href={url} class="cta" aria-label={text} title="Contact">
  <span class="outer-circle">
    <span class="inner-circle"></span>
  </span>
  <span class="text">{text}</span>
</a>

<style>
  .cta {
    position: relative;
    display: block;
    margin: 0 auto 3rem;
    width: 150px;
    height: 4rem;
    font-weight: 600;
  }

  @media (min-width: 768px) {
    .cta {
      margin: 0 auto 3rem 0;
    }
  }

  .cta .outer-circle {
    position: absolute;
    width: 4rem;
    height: 100%;
    border: 1px solid var(--color-black);
    border-radius: 50%;
  }

  .cta .inner-circle {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0.8rem;
    height: 0.8rem;
    background: var(--color-black);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    animation: circle 2s ease-in-out infinite;
  }

  .cta .text {
    position: absolute;
    top: 50%;
    left: 110px;
    transform: translate(-50%, -50%);
    z-index: 1;
    width: 110px;
    padding: 0.5rem 0;
    background: var(--color-white);
  }
</style>
