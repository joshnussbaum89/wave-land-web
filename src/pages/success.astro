---
import Layout from '../layouts/Layout.astro'
import SectionHeader from '../components/text/SectionHeader.astro'
import JoshCta from '../components/buttons/JoshCta.astro'
---

<Layout title="Wave Land Web | Success" description="Successful form submit">
  <header id="header" class="header">
    <section class="header-info">
      <div class="info">
        <SectionHeader text="Thank you!" />
        <p>Your form submission has been received.</p>
        <JoshCta text="← Back to site" url="/" />
      </div>
    </section>
  </header>
</Layout>

<style>
  .header {
    min-height: 75vh;
    display: flex;
    flex-direction: column;
    gap: 6rem;
  }

  .header-info {
    padding: 1rem;
    text-align: center;
  }

  @media (min-width: 768px) {
    .header-info {
      padding: 2rem;
    }
  }

  .info p {
    margin: 0 auto 1rem;
    font-size: var(--size-sm);
    font-weight: var(--weight-bold);
  }

  @media (min-width: 768px) {
    .info p {
      font-size: var(--size-base);
    }
  }

  .info h2 {
    margin-bottom: 1rem;
    font-size: var(--size-lg);
  }

  @media (min-width: 768px) {
    .info h2 {
      font-size: var(--size-xl);
    }
  }
</style>

<script>
  const header = document.getElementById('header')
  window.addEventListener('DOMContentLoaded', () => header?.classList.add('active'))
</script>
